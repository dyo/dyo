{
	"name": "dyo",
	"version": "2.0.8",
	"license": "MIT",
	"description": "Dyo is a JavaScript library for building user interfaces",
	"homepage": "https://github.com/dyo/dyo",
	"author": "Sultan Tarimo <sultantarimo@me.com>",
	"repository": "https://github.com/dyo/dyo",
	"bugs": "https://github.com/dyo/dyo/issues",
	"type": "module",
	"main": "./dyo.js",
	"module": "./dyo.js",
	"exports": "./dyo.js",
	"typings": "types/typescript.d.ts",
	"files": ["dyo.js", "types/"],
	"scripts": {
		"test": "nyc mocha --harmony --require esm tools/tests.js --recursive test",
		"postversion": "npm publish && git push --follow-tags",
		"release-major": "npm version major -m '%s'",
		"release-minor": "npm version minor -m '%s'",
		"release-patch": "npm version patch -m '%s'"
	},
	"devDependencies": {
		"dyo": "./dyo.js",
		"esm": "3.2.25",
		"nyc": "15.1.0",
		"chai": "4.3.4",
		"mocha": "9.1.4",
		"jsdom": "19.0.0"
	},
	"nyc": {
		"exclude": ["**/docs/", "**/tests/", "**/tools/"],
		"reporter": ["lcov", "text"],
		"temp-dir": "./coverage/.nyc_output"
	},
	"esm": {
		"cjs": true,
		"cache": false
	}
}
